<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ValoNerdge" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->



    </style>


    <style name="AppBackgroundVertical">

        <item name="android:background">@drawable/gradient_vertical</item>

    </style>

    <style name="BackgroundForAppHorizontal">

        <item name="android:background">@drawable/gradient_horizontal</item>

    </style>
    
    <style name="roundedImgView">

        <item name="cornerFamily"> rounded </item>

        <item name="cornerSize"> 10dp </item>

        <item name="android:scaleType"> centerCrop </item>

        <item name="color" >#00FFFFFF</item>

    </style>

</resources>